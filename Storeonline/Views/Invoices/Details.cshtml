@model Storeonline.Models.Invoice
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
 
</head>
<body>
    <div class="container">
        <div class="card" style="margin: 30px">
            <div class="card-header">
                <center>
                    
                    @Html.DisplayNameFor(model => model.InvoiceCode)
                    #@Html.DisplayFor(model => model.InvoiceCode)
                </center>
            </div>
            <div class="card-body">
                <div class="form">
                    <div class="form-group row">
                        <div style="padding-right: 10px"> Họ và tên khách hàng: </div>
                        <div style="font-weight:bold">
                            @Html.DisplayFor(model => model.LastName)
                            @Html.DisplayFor(model => model.FirstName)
                        </div>
                    </div>
                    <div class="form-group row">
                        <div style="padding-right: 10px"> Mã khách hàng: </div>
                        <div style="font-weight:bold">
                            @Html.DisplayFor(model => model.UserCode)
                        </div>
                        </div>
                    <div class="form-group row">
                        <div style="padding-right: 10px"> Email: </div>
                        <div style="font-weight:bold">
                            @Html.DisplayFor(model => model.Email)
                        </div>
                        </div>
                    <div class="form-group row">
                        <div style="padding-right: 10px"> Số điện thoại: </div>
                        <div style="font-weight:bold">
                            @Html.DisplayFor(model => model.Phone)
                        </div>
                        </div>
                    <div class="form-group row">
                        <div style="padding-right: 10px"> Địa chỉ giao hàng: </div>
                        <div style="font-weight:bold">
                            @Html.DisplayFor(model => model.Address)
                        </div>
                        </div>
                    <div class="form-group row">
                        <div style="padding-right: 10px"> Ghi chú giao hàng: </div>
                        <div style="font-weight:bold">
                            @Html.DisplayFor(model => model.ghichu)
                        </div>
                        </div>
                    <div class="form-group row">
                        <div style="padding-right: 10px"> Hình thức thanh toán: </div>
                        <div style="font-weight:bold">
                            @Html.DisplayFor(model => model.Payment)
                        </div>
                        </div>


                    </div>
            </div>
         
        </div>
    </div>
  
  
</body>
</html>
