<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SMobile Premium</title>
    <!-- Favicon -->
    <link href="~/Content/Image/logo/logo.png" rel="icon">
 

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Arimo:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">

    <!-- CSS Libraries -->

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="~/Content/lib/slick/slick-theme.css" rel="stylesheet" />
    <link href="~/Content/lib/slick/slick.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body style="background-color:#f8f9fa">
  
    <!-- Nav Bar Start -->
    <div class="nav">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-md bg-dark navbar-dark" style="height:70px">
                
                <a  href="@Url.Action("Index","Home")" style="font-weight:bold; color:black; text-decoration:none" >
                    <img src="~/Content/Image/logo/logo.png"  style="width:50px;height:50px"/>
                    Smobile Premium
                </a>

                <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse" style="margin-left:50px">
                    <div class="navbar-nav mr-auto"  >
                        <div class="nav-item dropdown" style="color:black; font-weight:bold">
                            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" style="color:black; font-weight:bold">Nhà cung cấp</a>
                            <div class="dropdown-menu">
                                <a href="#" class="dropdown-item">IPHONE</a>
                                <a href="#" class="dropdown-item">SAMSUNG</a>
                                <a href="#" class="dropdown-item">OPPO</a>
                                <a href="#" class="dropdown-item">XIAOMI</a>
                                <a href="#" class="dropdown-item">VSMART</a>
                            </div>
                        </div>
                        <a href="#" class="nav-item nav-link" style="color:black; font-weight:bold">Công nghệ</a>
                        <a href="#" class="nav-item nav-link" style="color:black; font-weight:bold">Giới thiệu</a>
                        <a href="#" class="nav-item nav-link" style="color:black; font-weight:bold">Liên hệ</a>


                    </div>
                    <div class="navbar-nav ml-auto">

                        @if (Session["Username"] != null)
                        {

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" style="text-decoration:none">Xin chào @Session["Username"].ToString() </a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="/Customer/Details/@Session["userID"]">Tài khoản</a>
                                    <a class="dropdown-item" href="@Url.Action("ViewCart", "Carts")">Giỏ hàng</a>
                                    <a class="dropdown-item" href="/Customer/Hoadons/Lichsudonhang/@Session["userID"]">Lịch sử Đơn hàng</a>
                                    <a class="dropdown-item" href="@Url.Action("LogOut", "Customer")">Đăng xuất</a>
                                </div>
                            </li>
                        }
                        else
                        {
                    <li class="nav-item">
                        <a style="color:black; font-weight:bold; text-decoration:none" href="@Url.Action("Login","Customer")">Đăng nhập</a>
                        &nbsp;&nbsp;
                        <a style="color:black; font-weight:bold; text-decoration:none" href="@Url.Action("Signup","Customer")">Đăng ký</a>
                    </li>
                        }
                    </div>
                </div>
            </nav>
        </div>
    </div>
    <!-- Nav Bar End -->

    <div class="body-content" >
        @RenderBody()
    </div>


    <!-- Footer Start -->
    <div class="footer" style="background-color: #ffd900 ">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-3 col-md-6">
                    <div class="footer-widget">
                        <img class="mu-footer-logo" src="~/Content/Image/logo/logo.png" alt="logo" style="width:30%;height:30%">
                        <p style="font-size:large">Smoblie Thế giới điện thoại dành riêng cho bạn. </p>
                       
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="footer-widget">
                        <h3>HỖ TRỢ & TƯ VẤN</h3>
                        <ul >
                            <li><a href="#">Giới thiệu Công ty</a></li>
                            <li><a href="#">Tư vấn mua hàng</a></li>
                            <li><a href="#">Khiếu nại</a></li>
                            <li><a href="#">Bảo hành</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-lg-4 col-md-8">
                    <div class="footer-widget">
                        <h3>Liên hệ</h3>
                        <ul class="list-unstyled">
                            <li class="media">
                                <span class="fa fa-home" style="padding-right:10px"></span>
                                <div class="media-body">
                                    <p>828 Sư Vạn Hạnh, Phường 13, Quận 10, TP.HCM</p>
                                </div>
                            </li>
                            <li class="media">
                                <span class="fa fa-phone" style="padding-right:10px"></span>
                                <div class="media-body">
                                    <p> (+84 28) 38 632 052 - 38 629 232 </p>
                                </div>
                            </li>
                            <li class="media">
                                <span class="fa fa-envelope" style="padding-right:10px"></span>
                                <div class="media-body">
                                    <p>contact@huflit.edu.vn</p>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>

        </div>
    </div>
    <!-- Footer End -->
    <!-- Footer Bottom Start -->
    <div class="footer-bottom">
        <div class="container">
            <div class="row">
                <div class="col-md-6 copyright">
                    <p class="mu-copy-right">&copy; Copyright <a rel="nofollow" href="">2020 SMoblie.com</a>. All right reserved.</p>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer Bottom End -->
    <!-- Back to Top -->
    <a href="#" class="back-to-top"><i class="fa fa-chevron-up"></i></a>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>

    <script src="~/Content/lib/easing/easing.min.js"></script>
    <script src="~/Content/lib/slick/slick.min.js"></script>
    <!-- Template Javascript -->
    <script src="~/Content/js/main.js"></script>



    <!--Cuộn trang lên đầu-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>


</body>
</html>
