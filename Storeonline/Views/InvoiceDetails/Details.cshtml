@using Storeonline.Models;
@model  Invoice

@{
    Layout = "~/Contents/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

    <!--Thông báo lỗi không có sản phẩm-->
    @section scripts{
        <script>
        $(function () {
            $('#AlertBox').removeClass('hide');
            $('#AlertBox').delay(4000).slideUp(500);
        });

        </script>
    }


    <div style="font-family:Noto Serif, serif">
        <div class="container">
            <div class="row">
                <div class="col-sm-1"></div>
                <div class="col-sm-10">

                    <div class="card" style="margin:50px">
                        <!--Thông báo lỗi hiển thị-->
                        @if (TempData["AlertMessage"] != null)
                        {
                            <div id="AlertBox" class="alert @TempData["AlertType"] hide" role="alert" style="margin-bottom:10px">
                                @TempData["AlertMessage"]
                            </div>
                        }
                    <div class="card-body">
                        <Center>
                            <h2 style="font-family:'Times New Roman', Times, serif, Arial, sans-serif">
                                THÔNG TIN ĐƠN HÀNG
                            </h2>

                        </Center>
                        <hr />
                        @using (Html.BeginForm("Details", "InvoiceDetails", FormMethod.Post))
                        {
                            <div class="form-group row">
                                <div class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.InvoiceID)
                                </div>
                                <div class="col-sm-8">
                                    <strong>   #@Html.DisplayFor(model => model.InvoiceID)</strong>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.LastName)
                                </div>
                                <div class="col-sm-8">
                                    @Html.DisplayFor(model => model.LastName)
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.FirstName)
                                </div>
                                <div class="col-sm-8">
                                    @Html.DisplayFor(model => model.FirstName)
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.Phone)
                                </div>
                                <div class="col-sm-8">
                                    @Html.DisplayFor(model => model.Phone)
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.CreateDate)
                                </div>
                                <div class="col-sm-8">
                                    @Html.DisplayFor(model => model.CreateDate)
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.Address)
                                </div>
                                <div class="col-sm-8">
                                    @Html.DisplayFor(model => model.Address)
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.ghichu)
                                </div>
                                <div class="col-sm-8">
                                    @Html.DisplayFor(model => model.ghichu)
                                </div>
                            </div>

                            <br />
                            <div>
                                @{IEnumerable<InvoiceDetails> dschitiet = (IEnumerable<InvoiceDetails>)ViewBag.Listproductdetails;}

                                <table class="table">
                                    <tr>
                                        <td><b>Sản phẩm</b></td>
                                        <td><b>Số lượng</b></td>
                                        <td><b>Đơn giá</b></td>
                                    </tr>

                                    @foreach (var item in dschitiet.ToList())
                                    {

                                        <tr>
                                            <td>@item.ProductName</td>
                                            <td>@item.Quantity</td>
                                            <td>@item.Price.ToString("##,###,###")</td>
                                        </tr>

                                    }
                                    <tr>
                                        <td><strong> Tổng cộng  </strong></td>
                                        <td><strong> @Model.InvoiceDetails.Sum(n => n.Quantity) </strong></td>
                                        <td><strong> @Model.InvoiceDetails.Sum(n => n.Price).ToString("##,###,###") </strong></td>
                                    </tr>
                                </table>

                            </div>
                            <div class="form-group ">
                                <center>
                                    <a class="btn btn-primary" style="width:250px; margin-right:10px" href="@Url.Action("Index", "Home")">
                                        TIẾP TỤC MUA HÀNG
                                    </a>
                                </center>
                            </div>
                        }

                    </div>
                    </div>
                </div>
                <div class="col-sm-1"></div>
            </div>
        </div>
    </div>
</body>
</html>
