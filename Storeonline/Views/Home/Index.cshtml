@model PagedList.IPagedList<Storeonline.Models.Product>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Home Page";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Trang chủ</title>
    <script src="~/assets/OwlCarousel/jquery.min.js"></script>
    <script src="~/assets/OwlCarousel/owl.carousel.js"></script>
    <link href="~/assets/OwlCarousel/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/assets/OwlCarousel/owl.theme.default.css" rel="stylesheet" />
    <link href="~/assets/css/PagedList.css" rel="stylesheet" />

</head>

<style type="text/css">
    h4, h3 {
        font-family: 'NotoSerif-Bold';
        font-size: 18px;
        color: black;
    }

    p {
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
    }
    /*Hiệu ứng rê chuột*/
    .img:hover div.txt {
        opacity: 1;
        transform: translateY(3px);
        transition: ease-in-out 0.5s;
    }

    .img:hover img {
        transform: scale(1.2);
        transition: all ease-in-out 0.5s;
    }
</style>

<header>
    <!-- Bottom Bar Start -->
    <div class="bottom-bar" >
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-3">
                    <div class="logo">
                        <a href="index.html">
                            <img src="~/Content/Image/logo/logo.png" />
                            Smobile Premium
                        </a>
                    </div>
                </div>
                <div class="col-md-6">
                    @using (Html.BeginForm("Index", "Home"))
                    {
                        <div class="form-group row" style="padding: 6px 0px 0px 0px ">
                            <input type="text" class="col-sm-4" placeholder="Tìm kiếm..." aria-label="Tìm kiếm..." aria-describedby="basic-addon2" id="ten" name="ten" />
                            <input type="text" class="col-sm-4" placeholder="Tìm giá..." aria-lable="Tìm kiếm..." aria-describedby="basic-addon2" id="price" name="price" />
                            <input type="submit" value="Tìm" class="col-sm-2" />
                        </div>
                    }
                </div>
                <div class="col-md-3">
                    <div class="user">
                        <a href="wishlist.html" class="btn wishlist">
                            <i class="fa fa-heart"></i>
                            <span>(0)</span>
                        </a>
                        <a href="cart.html" class="btn cart">
                            <i class="fa fa-shopping-cart"></i>
                            <span>(0)</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bottom Bar End -->

    <script>
        //Thời gian chạy sildes
        $('.carousel').carousel({
            interval: 1000
        })
        $('#myCarousel').on('slide.bs.carousel', function () {

        })
    </script>

</header>

<body>


    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/Content/Image/carousel/iphone.png" class="d-block" style="width:1500px; height:350px" alt="..." />
                        </div>
                        <div class="carousel-item">
                            <img src="~/Content/Image/carousel/oppo.png" class="d-block" style="width:1500px; height:350px" alt="..." />
                        </div>
                        <div class="carousel-item">
                            <img src="~/Content/Image/carousel/samsung.png" class="d-block" style="width:1500px; height:350px" alt="..." />
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                int discount = item.Price - item.PromotionPrice;
                <div class="card" style="width:16rem;margin:10px">

                    <a href="@Url.Action("DetailProducts", "Home", new { id = item.ProductID})">
                        <div class="img">
                            <img src=" @Url.Content(item.ProductImage) " class="card-img-top" alt="Phone Photo">
                        </div>
                    </a>
                    <div class="card-body">
                        <a href="@Url.Action("DetailProducts", "Home", new { id = item.ProductID })">
                            <h3 class="card-title">@item.ProductName</h3>
                            <p class="card-text"> @item.Description</p>
                            <h4 style="color:red; font-size:larger;font-weight:bold ;font-family:'Noto Serif'"> @discount.ToString("#,#00")đ </h4>
                            <strike style="color:gray"><h5 style="color:gray;font-size:small;font-family:'Noto Serif'"> @item.Price.ToString("#,#00")đ  </h5></strike>
                        </a>
                        <br />
                    </div>
                </div>
            }

        </div>
    </div>

    <div class="col-sm-12" style="text-align:center;">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
</body>
</html>
