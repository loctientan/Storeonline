@model Storeonline.Models.User
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.ValidationMessage("Error", new { @style = "color:red" })
@using (Html.BeginForm("Login", "Customer", FormMethod.Post))
{


    <section class="font-login">
        <article>
            <div class="tieudelogin">
                <h4 style="color:black">ĐĂNG NHẬP</h4><br>
            </div>
            <div class="card">
                <div class="card-body">
                    <!--Thông báo lỗi hiển thị-->
                    @if (TempData["AlertMessage"] != null)
                    {
                        <div id="AlertBox" class="alert @TempData["AlertType"] hide" role="alert" style="margin-bottom:10px">
                            @TempData["AlertMessage"]
                        </div>
                    }

                    <input required="" type="text" value="" placeholder="Username" class="text form-control" aria-describedby="basic-addon1" name="Username" id="Username">
                    <input required="" type="password" value="" placeholder="Password" class="text form-control" aria-describedby="basic-addon1" name="Password" id="Password">

                    <div class="resetorregister">
                        <a href="#"><ins>Quên mật khẩu</ins></a> &nbsp; <a placeholder>or</a> &nbsp; <a href="@Url.Action("Signup", "Customer")"><ins>Đăng kí</ins></a>
                    </div>
                    <br>
                    <div class="btn-login">
                        <button type="submit">ĐĂNG NHẬP</button>
                    </div>
                </div>
            </div>
         
        </article>
    </section>
}